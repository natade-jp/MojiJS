{
	"name": "mojijs",
	"version": "0.1.0",
	"description": "Useful tools for Japanese character code.",
	"author": "natade-jp <natade3@gmail.com> (https://github.com/natade-jp)",
	"repository": {
		"type": "git",
		"url": "https://github.com/natade-jp/mojijs.git"
	},
	"license": "MIT",
	"main": "./build/mojijs.umd.js",
	"module": "./build/mojijs.module.mjs",
	"keywords": [
		"cp932",
		"shift_jis",
		"sjis",
		"shift_jis2004",
		"sjis2004",
		"unicode"
	],
	"directories": {
		"src": "./src",
		"build": "./build"
	},
	"scripts": {
		"dev": "node ./scripts/package.dev.js",
		"build": "node ./scripts/package.build.js",
		"doc": "node ./scripts/package.doc.js"
	},
	"jest": {
		"verbose": true,
		"rootDir": "./src",
		"moduleFileExtensions": [
			"js",
			"mjs"
		],
		"testMatch": [
			"**/__tests__/**/*.?(m)js?(x)",
			"**/?(*.)(spec|test).?(m)js?(x)"
		],
		"transform": {
			"^.+\\.(js|mjs)$": "babel-jest"
		}
	},
	"devDependencies": {
		"esdoc": "^1.1.0",
		"esdoc-standard-plugin": "^1.0.0",
		"rollup": "^1.18.0",
		"rollup-plugin-buble": "^0.19.8",
		"rollup-plugin-uglify": "^6.0.2",
		"rollup-plugin-uglify-es": "0.0.1"
	}
}
